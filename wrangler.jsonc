/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "love-you",
  "main": ".open-next/worker.js",
  "compatibility_date": "2025-12-01",
  "compatibility_flags": ["nodejs_compat", "global_fetch_strictly_public"],
  "routes": [
    {
      "pattern": "loveyou.moshangapp.com",
      "custom_domain": true,
    },
  ],
  "assets": {
    "binding": "ASSETS",
    "directory": ".open-next/assets",
  },
  "images": {
    "binding": "IMAGES",
  },
  "services": [
    {
      "binding": "WORKER_SELF_REFERENCE",
      "service": "love-you",
    },
  ],
  "observability": {
    "enabled": true,
  },
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "love-you-db",
      "database_id": "0e373dd0-18d9-40dd-bd6b-ca496c1ca4a4",
      "migrations_dir": "src/db/migrations",
    },
  ],
  "r2_buckets": [
    {
      "binding": "PHOTOS_BUCKET",
      "bucket_name": "love-you-photos",
    },
  ],
  "vars": {
    "R2_BUCKET_NAME": "love-you-photos",
    "PHOTOS_BUCKET_URL": "https://love-you-photos.moshangapp.com",
  },
}
